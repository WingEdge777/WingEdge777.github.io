---
import SITE_INFO from "@/config";
import {Image} from "astro:assets";
import "./Reward.less";
import alipayImage from "@/assets/images/alipay.jpg"
import wechatImage from "@/assets/images/wechat.jpg"

---

{
	SITE_INFO.Reward.AliPay && SITE_INFO.Reward.WeChat && (
		<section class="vh-reward">
			<p>喜欢这篇文章嘛，觉得文章不错的话，奖励奖励我！</p>
			<div class="reward-list">
				{SITE_INFO.Reward.AliPay && (
					<span class="alipay">
						<Image src={alipayImage} alt="支付宝打赏"  width="250" height="450" />支付宝
					</span>
				)}
				{SITE_INFO.Reward.WeChat && (
					<span class="wechat">
						<Image src={wechatImage} alt="微信打赏"  width="350" height="400" />微信
					</span>
				)}
			</div>
		</section>
	)
}
